{
    "name": "widevine",
    "version": "1.0.3",
    "description": "NodeJS Widevine Client",
    "keywords": [
        "widevine"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/Frooastside/node-widevine.git"
    },
    "author": "Frooastside <frooastside@gmail.com>",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/Frooastside/node-widevine/issues"
    },
    "homepage": "https://github.com/Frooastside/node-widevine/",
    "scripts": {
        "proto:compile": "npx buf generate proto",
        "lint": "eslint --ext ts ./src --quiet",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "build": "tsc -p tsconfig.esm.json && tsc -p tsconfig.cjs.json"
    },
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js",
            "types": "./dist/esm/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/node": "^24.10.1",
        "@types/node-forge": "^1.3.14",
        "dotenv": "^17.2.3",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.5.0",
        "jiti": "^2.6.1",
        "prettier": "^3.7.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.0",
        "@bufbuild/buf": "^1.61.0",
        "@bufbuild/protoc-gen-es": "^2.10.1"
    },
    "dependencies": {
        "@bufbuild/protobuf": "^2.10.1",
        "node-forge": "^1.3.2"
    }
}
